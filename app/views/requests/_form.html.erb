<%= form_for @request do |f| %>


    <%= f.hidden_field :creator_id, value: current_user.id %>

    <%= f.collection_select(:category_id, Category.all, :id, :name, { include_blank: 'Select' }) %><br>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.submit %>
    

<% end %>